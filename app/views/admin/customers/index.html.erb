<%= render 'admin/list' %>
<div class="container">
  <div class="row">
    <div class="col-2">
      <h5>会員一覧</h5>
    </div>
  </div>


  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <% @customers.each do |customer| %>
      <tbody>
        <td><%= customer.id %></td>
        <td><%= link_to customer.first_name, admin_customer_path(customer.id) %></td>
        <td><%= customer.email %></td>
        <td><%= customer.is_deleted %></td>
      </tbody>
      <% end %>
    </table>
  </div>
</div>