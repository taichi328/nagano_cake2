<%= render 'admin/list' %>

<div class="container">
  <div class="row">
    <div class="col-3">
      <h5>商品新規登録</h5>
    </div>
  </div>

  <%= form_with model: @item, url: admin_items_path do |f| %>
    <div class="row">
      <div class="col-2">
        商品画像
      </div>
      <div class="col-4">
        <div class="mb-2">
        <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-2">
        商品名
      </div>
      <div class="col-8">
        <div class="mb-2">
        <%= f.text_field :name %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-2">
        商品説明
      </div>
      <div class="col-8">
        <div class="mb-2">
        <%= f.text_area :introduction %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-2">
        税抜き価格
      </div>
      <div class="col-8">
        <%= f.text_field :price %>
      </div>
    </div>
    <%= f.submit '新規登録' %>
  <% end %>
</div>
