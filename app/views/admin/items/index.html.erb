<%= render 'admin/list' %>
<div class="container">
  <div class="row">
    <div class="col-3">
      <h5>商品一覧</h5>
    </div>
    <div class="col-6">
        <a class="btn btn-success rounded-circle p-0" style="width:2rem;height:2rem;" href="/admin/items/new" role="button">+</a>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
      </tr>
    </thead>
    <% @items.each do |item| %>
    <tbody>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
    </tbody>
    <% end %>
  </table>
  <%= paginate @items %>
</div>
