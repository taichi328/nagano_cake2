<%= render 'admin/list' %>
<div class="container">
  <div class="row">
    <div class="col-3">
      <h3>商品詳細</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <%= image_tag @item.get_image %>
    </div>
    <div class="col-6">
      <p>商品名　<%= @item.name %></p>
      <p>商品説明　<%= @item.introduction %></p>
      <p>税込価格　<%= @item.price %>円</p>
    </div>
  </div>

  <div class="row">
      <div class="mx-auto">
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success' %>
      </div>
  </div>
</div>