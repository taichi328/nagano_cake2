<%= render 'public/list' %>
<div class="container">
  <div class="row">
    <div class="col-3 mt-2 mb-2">
      <h4><strong>会員情報編集</strong></h4>
    </div>
  </div>

  <%= form_with model: @customer do |f| %>
  <div class="row">
    <p class="col-2">
      氏名
    </p>
    <div class="col-3">
      <div class="form-group">
          <%= f.text_field :first_name, autofocus: true, id:"inputName" %>
      </div>
    </div>
    <div class="col-3">
      <div class="form-group">
          <%= f.text_field :last_name %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      フリガナ
    </div>
    <div class="col-3">
      <div class="form-group">
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
    <div class="col-3">
      <div class="form-group">
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      郵便番号
    </div>
    <div class="col-3">
      <div class="form-group">
        <%= f.text_field :post_code %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      住所
    </div>
    <div class="col-10">
      <div class="form-group">
        <%= f.text_field :address %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      電話番号
    </div>
    <div class="col-3">
      <div class="form-group">
        <%= f.text_field :telephone_number %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      メールアドレス
    </div>
    <div class="col-3">
      <div class="form-group">
        <%= f.email_field :email %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-3 mx-auto">
      <%= f.submit "編集内容を保存する" %>
    </div>
    <div class="col-3 mx-auto">
      <a class="btn btn-success" href="/public/customers/check" role="button">退会する</a>
    </div>
  </div>



  <% end %>
</div>